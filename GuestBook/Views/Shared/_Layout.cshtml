<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=8">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <script src="../../Scripts/jquery-1.10.1.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src="../../Scripts/mvcfoolproof.unobtrusive.min.js" type="text/javascript"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        $(function () {
            var i = window.setInterval(hasAjaxRequest, 10000);
        });
        function hasAjaxRequest() {
            $.ajax({
                url: '@Url.Action("HasAjaxRequest", "Base")',
                type: 'GET',
                success: function () {
                    debugger;
                }
            });
        }
    </script>
</head>
<body>
    <div class="float-right">
        <section id="login">
            Hello, <span class="username">@(string.IsNullOrEmpty(User.Identity.Name) ? "Guest" : User.Identity.Name)</span>!
            
            @if (User.Identity == null || string.IsNullOrEmpty(User.Identity.Name))
            {
            <div>@Html.ActionLink("Login", "Login", "Account")</div>
            }
        </section>
        <nav>
            @Html.Partial("_MenuPartial")            
        </nav>
    </div>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content">
            @RenderBody()
        </section>
    </div>
    <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Nilesh Gokhales blog</p>
                </div>
            </div>
        </footer>
    @RenderSection("Scripts", required: false);
</body>
